---

<BaseLayout title="About Me">
  <div class="about-container">
    <!-- About Me Section -->
    <section class="about-section">
      <div class="about-content">
        <div class="about-image">
          <img src="/assets/aboutProfileC.gif" alt="Profile" />
        </div>
        <div class="about-text">
          <h1>About Me ðŸŽ“</h1>
