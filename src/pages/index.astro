---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const response = await fetch('https://api.github.com/users/YoRzHe-HotaaRu');
const userData = await response.json();

const stats = {
  repos: userData.public_repos,
  followers: userData.followers,
  following: userData.following,
};
---

<BaseLayout title="YioRzHe">
  <div class="profile-header">
    <div class="profile-image">
      <img
        src={userData.avatar_url + "?s=120"}
        alt={userData.name || 'YioRzHe-HotaaRu'}
        width="120"
        height="120"
      />
    </div>
    <div class="profile-info">
		<h1><span class="gradient-text">{userData.name || 'YioRzHe-HotaaRu'}</span>☄️</h1>
		<p class="bio">
			{userData.bio || 'Developer, designer, and lifelong learner building cool things on the web.'}
		</p>

      	<!-- === Social Links === -->
		<div class="social-links">
		<a href="https://github.com/YoRzHe-HotaaRu" target="_blank" rel="noopener" class="social-link github">
			<i class="fab fa-github"></i>
			<span>GitHub</span>
		</a>
		<a href="https://linkedin.com/in/amir-hafizi-musa-5530b9364" target="_blank" rel="noopener" class="social-link linkedin">
			<i class="fab fa-linkedin"></i>
			<span>LinkedIn</span>
		</a>
		<a href="https://x.com/VulKan42069" target="_blank" rel="noopener" class="social-link x">
			<i class="fa-brands fa-x-twitter"></i>
			<span>X</span>
		</a>
		<a href="https://facebook.com/muhammad.ameerool" target="_blank" rel="noopener" class="social-link facebook">
			<i class="fab fa-facebook"></i>
			<span>Facebook</span>
		</a>
		<a href="https://discord.com/users/330997221334056971" target="_blank" rel="noopener" class="social-link discord">
			<i class="fab fa-discord"></i>
			<span>Discord</span>
		</a>
		<a href="https://steamcommunity.com/id/amirhafizi177013" target="_blank" rel="noopener" class="social-link steam">
			<i class="fab fa-steam"></i>
			<span>Steam</span>
		</a>
		<a href="https://youtube.com/@VectorVulKan727" target="_blank" rel="noopener" class="social-link youtube">
			<i class="fab fa-youtube"></i>
			<span>YouTube</span>
		</a>
		</div>
    </div>
  </div>

  <!-- === GitHub Stats Section === -->
  <section class="stats-section">
    <h2>GitHub Stats</h2>
    <div class="stats-grid">
      <div class="stat-item">
        <span class="stat-number">{stats.repos}</span>
        <span class="stat-label">Repos</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">{stats.followers}</span>
        <span class="stat-label">Followers</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">{stats.following}</span>
        <span class="stat-label">Following</span>
      </div>
    </div>
  </section>

  	<!-- === Skills Section === -->
	<section class="skills-section">
	<h2>Favourites</h2>
		<div class="skills-row">
			
			<!-- Rockstar Games -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/rockstargames" alt="Rockstar Games" />
			<span>Rockstar</span>
			</div>

			<!-- GDScript -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/godotengine" alt="Godot" />
			<span>Godot</span>
			</div>

			<!-- Unity -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/unity" alt="Unity" />
			<span>Unity</span>
			</div>

			<!-- Unreal Engine -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/unrealengine" alt="Unreal Engine" />
			<span>Unreal</span>
			</div>

			<!-- Flask -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/flask" alt="FLask" />
			<span>Flask</span>
			</div>


			<!-- React -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/react" alt="React" />
			<span>React</span>
			</div>


			<!-- Astro -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/astro" alt="Astro" />
			<span>Astro</span>
			</div>

			<!-- Sass (SCSS) -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/sass" alt="Sass" />
			<span>SCSS</span>
			</div>


			<!-- Docker -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/docker" alt="Docker" />
			<span>Docker</span>
			</div>

			<!-- Ollama -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/ollama" alt="Ollama" />
			<span>Ollama</span>
			</div>

			<!-- Win -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/wine" alt="Wine" />
			<span>Wine</span>
			</div>

			<!-- Arch Linux -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/archlinux" alt="Arch Linux" />
			<span>Arch Linux</span>
			</div>

			<!-- Blender -->
			<div class="skill-icon">
			<img src="https://cdn.simpleicons.org/blender" alt="Blender" />
			<span>Blender</span>
			</div>
		</div>
	</section>
</BaseLayout>