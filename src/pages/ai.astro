  { name: "LM Arena", url: "https://lmarena.ai/", category: "AI Arena" },
  { name: "Stable Audio", url: "https://stableaudio.com/", category: "Audio AI" },
];

// Add domain and favicon URL to each model
const aiModelsWithIcons = aiModels.map(ai => {
  const domain = getDomain(ai.url);
  
  // Custom favicon handling for specific domains
  let faviconUrl = `https://www.google.com/s2/favicons?domain=${domain}&sz=128`;
  
  // Special cases where Google favicon doesn't work well
  if (domain === 'chatgpt.com') {
    faviconUrl = 'https://cdn.oaistatic.com/_next/static/media/favicon-32x32.6e956b52.png';
  } else if (domain === 'chat.inceptionlabs.ai') {
    faviconUrl = 'https://chat.inceptionlabs.ai/favicon.ico';
  }
  
  return {
    ...ai,
    domain,
    faviconUrl
  };
});
