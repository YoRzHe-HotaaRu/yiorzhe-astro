  { name: "MiniMax (Full-Scale", url: "https://www.minimaxi.com/", category: "Creative AI" },
  { name: "Manus", url: "https://manus.im/app", category: "Multimodal AI" },
  { name: "OpenRouter", url: "https://openrouter.ai/", category: "AI API Host" },
  { name: "KiloCode", url: "https://app.kilocode.ai/", category: "Code Assistant" },
  { name: "RooCode", url: "https://app.roocode.com/", category: "Code Assistant" },
