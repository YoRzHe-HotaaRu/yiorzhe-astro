  { name: "ChatGPT", url: "https://chatgpt.com/", category: "General AI" },
  { name: "Claude", url: "https://claude.ai/", category: "Multimodal AI" },
  { name: "Mistral", url: "https://chat.mistral.ai/chat", category: "General AI" },
  { name: "Liquid", url: "https://playground.liquid.ai/chat", category: "Creative AI" },
  { name: "Venice", url: "https://venice.ai/chat", category: "Privacy AI" },
  { name: "CoPilot", url: "https://copilot.microsoft.com/chats/", category: "Multimodal AI" },
  { name: "Mercury", url: "https://chat.inceptionlabs.ai/", category: "Research AI" },
