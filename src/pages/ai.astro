  { name: "Seedream (Dreamina)", url: "https://dreamina.capcut.com/", category: "Image Editor & Generator" },
  { name: "Wan", url: "https://create.wan.video/", category: "Multimodal AI" },
  { name: "Qwen", url: "https://chat.qwen.ai/", category: "Multilingual AI" },
  { name: "Zhipu - GLM", url: "https://chat.z.ai/", category: "General AI" },
  { name: "Deepseek", url: "https://chat.deepseek.com/", category: "Code Assistant" },
  { name: "Baichuan", url: "https://www.baichuan-ai.com/home", category: "Medical AI" },
