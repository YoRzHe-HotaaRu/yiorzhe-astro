---
// src/pages/certificates.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Certificates">
  <div class="certificates-container">
    <div class="certificates-header">
      <div class="header-content">
        <h1>My Certifications ðŸ“œ</h1>
        <p>
          Here are some of the certifications I've earned while learning to code, 
          build games, and grow as a developer. Each one represents a milestone in my journey.
        </p>
      </div>
      <div class="header-decoration">
        <div class="decoration-item"></div>
        <div class="decoration-item"></div>
        <div class="decoration-item"></div>
      </div>
    </div>
    
    <div class="certificates-grid">
      <!-- Certificate 1 -->
      <div class="cert-card">
        <div class="cert-image">
          <img src="/assets/cert/UiTM-Logo.jpg" alt="Diploma in Computer Science" />
          <div class="cert-overlay">
            <div class="cert-icon">
              <i class="fas fa-graduation-cap"></i>
            </div>
          </div>
        </div>
        <div class="cert-content">
          <div class="cert-meta">
            <span class="cert-issuer">UiTM</span>
            <span class="cert-date">2022</span>
          </div>
          <h3>Diploma in Computer Science</h3>
          <p class="cert-desc">
            Diploma certificate in Computer Science from UiTM.
          </p>
          <a href="/assets/cert/Sijil Diploma Computer Science - UiTM.pdf" target="_blank" rel="noopener" class="cert-link">
            View Certificate <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>
      


      <!-- Certificate 2 -->
      <div class="cert-card">
        <div class="cert-image">
          <img src="https://godotengine.org/assets/press/logo_large_color_light.png" alt="Godot Certificate" />
          <div class="cert-overlay">
            <div class="cert-icon">
              <i class="fas fa-gamepad"></i>
            </div>
          </div>
        </div>
        <div class="cert-content">
          <div class="cert-meta">
            <span class="cert-issuer">Udemy</span>
            <span class="cert-date">2025</span>
          </div>
          <h3>Godot Game Development</h3>
          <p class="cert-desc">
            Master GDScript, build expansive world, create puzzles, dialogue & combat.
          </p>
          <a href="https://example.com/cert2" target="_blank" rel="noopener" class="cert-link">
            View Certificate <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>



      <!-- Certificate 3 -->
      <div class="cert-card">
        <div class="cert-image">
          <img src="/assets/cert/ENTCoverSijil.png" alt="UiTM Certificate" />
          <div class="cert-overlay">
            <div class="cert-icon">
              <i class="fas fa-graduation-cap"></i>
            </div>
          </div>
        </div>
        <div class="cert-content">
          <div class="cert-meta">
            <span class="cert-issuer">UiTM</span>
            <span class="cert-date">2025</span>
          </div>
          <h3>Collaborative Teaching For ENT300</h3>
          <p class="cert-desc">
            Overview of requirements for launching and starting up an entrepreneurial venture.
          </p>
          <a href="/assets/cert/ENT300-Sijil.pdf" target="_blank" rel="noopener" class="cert-link">
            View Certificate <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>
      </div>
    </div>
    
    <div class="certificates-footer">
      <div class="stats-container">
        <div class="stat-item">
          <span class="stat-number">3</span>
          <span class="stat-label">Certifications</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">3</span>
          <span class="stat-label">Years</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">100+</span>
          <span class="stat-label">Hours</span>
        </div>
      </div>
      
      
    </div>
  </div>
  
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  
  <style>
    :root {
      --primary-color: #637cce;
      --secondary-color: #8da7f0;
      --accent-color: #ff7e67;
      --dark-color: #2c3e50;
      --light-color: #f8f9fa;
      --text-color: #333;
      --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      --hover-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }
    
    .certificates-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
      background: linear-gradient(135deg, #f5f7ff 0%, #e8ecff 100%);
      min-height: 50vh;
      border-radius: 20px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    }
    
    .certificates-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 3rem;
      position: relative;
    }
    
    .header-content {
      flex: 2;
    }
    
    .certificates-header h1 {
      font-size: 3rem;
      color: var(--dark-color);
      margin-bottom: 1rem;
      position: relative;
      display: inline-block;
    }
    
    .certificates-header h1::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 80px;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
      border-radius: 2px;
    }
    
    .certificates-header p {
      color: var(--text-color);
      max-width: 700px;
      margin-top: 1.5rem;
      line-height: 1.6;
    }
    
    .header-decoration {
      flex: 1;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 15px;
    }
    
    .decoration-item {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      opacity: 0.7;
    }
    
    .decoration-item:nth-child(2) {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, var(--accent-color), #ff9e80);
    }
    
    .decoration-item:nth-child(3) {
      width: 30px;
      height: 30px;
      background: linear-gradient(135deg, #16a085, #1abc9c);
    }
    
    .certificates-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }
    
    .cert-card {
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: var(--card-shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
    }
    
    .cert-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--hover-shadow);
    }
    
    .cert-image {
      position: relative;
      height: 200px;
      overflow: hidden;
    }
    
    .cert-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    
    .cert-card:hover .cert-image img {
      transform: scale(1.05);
    }
    
    .cert-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .cert-card:hover .cert-overlay {
      opacity: 1;
    }
    
    .cert-icon {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.9);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--primary-color);
      font-size: 1.5rem;
      transform: translateY(20px);
      transition: transform 0.3s ease;
    }
    
    .cert-card:hover .cert-icon {
      transform: translateY(0);
    }
    
    .cert-content {
      padding: 1.5rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }
    
    .cert-meta {
      display: flex;
      justify-content: space-between;
      margin-bottom: 0.75rem;
    }
    
    .cert-issuer {
      color: var(--primary-color);
      font-weight: 600;
      font-size: 0.9rem;
    }
    
    .cert-date {
      color: #888;
      font-size: 0.9rem;
    }
    
    .cert-content h3 {
      font-size: 1.4rem;
      color: var(--dark-color);
      margin-bottom: 0.75rem;
      line-height: 1.3;
    }
    
    .cert-desc {
      color: #666;
      margin-bottom: 1.5rem;
      line-height: 1.5;
      flex-grow: 1;
    }
    
    .cert-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--primary-color);
      font-weight: 600;
      text-decoration: none;
      transition: gap 0.3s ease;
    }
    
    .cert-link:hover {
      gap: 0.75rem;
    }
    
    .certificates-footer {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
      margin-top: 2rem;
    }
    
    .stats-container {
      display: flex;
      justify-content: center;
      gap: 2rem;
      background: white;
      padding: 1.5rem 3rem;
      border-radius: 16px;
      box-shadow: var(--card-shadow);
    }
    
    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 0.25rem;
    }
    
    .stat-label {
      color: #666;
      font-size: 0.9rem;
    }
    
    .back-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: white;
      color: var(--primary-color);
      border-radius: 30px;
      text-decoration: none;
      font-weight: 500;
      transition: background 0.2s, transform 0.2s;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }
    
    .back-btn:hover {
      background: var(--light-color);
      transform: translateY(-2px);
    }
    
    /* Responsive adjustments */
    @media (max-width: 992px) {
      .certificates-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .header-decoration {
        margin-top: 1rem;
        justify-content: flex-start;
      }
    }
    
    @media (max-width: 768px) {
      .certificates-container {
        padding: 1.5rem;
      }
      
      .certificates-header h1 {
        font-size: 2.5rem;
      }
      
      .certificates-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      
      .stats-container {
        flex-wrap: wrap;
        gap: 1.5rem;
        padding: 1.5rem;
      }
    }
    
    @media (max-width: 480px) {
      .certificates-header h1 {
        font-size: 2rem;
      }
      
      .certificates-grid {
        grid-template-columns: 1fr;
      }
      
      .cert-image {
        height: 180px;
      }
    }
  </style>
</BaseLayout>