// src/pages/favorites/game.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

// Define the type for a game
interface Game {
  id: string;
  title: string;
  steamId?: string; // Steam App ID
  imageUrl?: string; // Custom image URL for non-Steam games
  link: string;
  description?: string;
  size: 'small' | 'medium' | 'large' | 'wide' | 'tall';
}

// Helper function to generate Steam image URL
