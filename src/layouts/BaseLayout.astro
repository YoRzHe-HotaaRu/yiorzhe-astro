---
const title = Astro.props.title || 'YioRzHe-HotaaRu';
import '../styles/main.scss';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
   
    <!-- Add Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      integrity="sha512-..."
      crossorigin="anonymous"
    />

    <!-- Your styles -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h1><a href="/" class="logo"><img src="/assets/logo4-transparent.png" alt="YioRzHe-HotaaRu Logo" /></a></h1>
        
        <!-- Hamburger menu button -->
        <button class="nav-toggle" aria-label="toggle navigation">
          <span class="hamburger"></span>
        </button>
        
        <nav class="nav">
          <a href="/ai" class="nav-link">AI</a>
          <a href="/apps" class="nav-link">Apps</a>
          <a href="/certificates" class="nav-link">Certificates</a>
          <a href="/gamedev" class="nav-link">GameDev</a>
          <a href="/projects" class="nav-link">Projects</a>
          <a href="/research" class="nav-link">Research</a>
          <a href="/about" class="nav-link">About</a>
          <a href="/contact" class="nav-link">Contact</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        Â© {new Date().getFullYear()} YioRzHe-HotaaRu. Built with Astro.
      </footer>
    </div>

    <!-- Add JavaScript for mobile menu toggle -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const navToggle = document.querySelector('.nav-toggle');
        const nav = document.querySelector('.nav');
        
        const toggleNav = () => {
          if (navToggle && nav) {
            nav.classList.toggle('nav-open');
            navToggle.classList.toggle('nav-open');
          }
        };
        
        if (navToggle) {
          navToggle.addEventListener('click', toggleNav);
        }
      });
    </script>
  </body>
</html>